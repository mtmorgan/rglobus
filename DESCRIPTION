Package: rglobus
Title: Manage 'Globus' File Transfer Services
Version: 0.0.0.9000
Authors@R: 
    person(
        "Martin", "Morgan", role = c("aut", "cre"),
        email = "mtmorgan.xyz@gmail.com",
        comment = c(ORCID = "0000-0002-5874-8148")
